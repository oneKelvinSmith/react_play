{
  "parser": "babel-eslint",
  "plugins": ["react"],
  "extends": ["standard", "standard-react"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/jsx-no-bind": [2, {
      "allowArrowFunctions": true
    }]
  }
}
